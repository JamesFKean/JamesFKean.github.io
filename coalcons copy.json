{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width":550,
  "height":350,
  "params": [
    {
      "name": "yearSelector", "value": 1981,
      "bind":{
        "input": "range",
        "min": 1981,
        "max": 2021,
        "step": 1,
        "name": "Year:"
      }
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/JamesFKean/JamesFKean.github.io/main/custom.geo.json",
    "format": {
      "property": "features" }},
"projection": {
  "type": "naturalEarth1"
},
"title": {
  "text": "Global Coal Consumption 2021",
  "subtitle":"0 Values are not data. Source: BP",
  "subtitleFontStyle":"italic",
  "subtitleFontSize":10,
  "anchor": "start",
  "color": "black"
},
"transform": [
  {"filter": "datum.yearS == datum.Year"},
  {
  "lookup": "properties.name",
  "from": {
    "data": {
      "url": "https://raw.githubusercontent.com/JamesFKean/JamesFKean.github.io/main/Coalcondata.csv",
      "format": {"type": "csv"}},
      "key": "Country",
      "fields": ["Year", "Country", "Coal Consumption"]
    }
  }
  ],
  "config": {
    "background":"#fff0d8"
    
      },
  "mark": {
    "type": "geoshape",
    "stroke": "black",
    "strokeWidth": 0.2
  },
  "encoding": {
    "color": {"field": "Coal Consumption", "type": "quantitative", "scale": {"scheme": "turbo"}, 
    "title": "Coal Usage Millions of Tonnes",
    "legend": {
        "orient": "bottom-left"
    }
    
    } ,
    "tooltip": [
      {
        "field": "properties.name", "type": "nominal", "title": "Country"
      },
      {"field": "Coal Consumption", "type": "quantitative", "title": "Coal consumption"}
    ]
  }
}