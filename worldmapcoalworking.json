{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title":{"text": "Global Coal Consumption From 1981 to 2021",
    "subtitle": "Source: BP", "anchor": "start", "subtitleFontSize": 10},
    "params": [
      {
        "name": "yearSelector",
        "value": 1981,
        "bind": {"input": "range", 
        "min": 1981,
        "max": 2021,
        "step": 1,
        "name": "Year:"}
      }
    ],
    "width": 540,
    "height": 340,
    "background": "#fff0d8",
    "data": {
      "url": "https://raw.githubusercontent.com/JamesFKean/JamesFKean.github.io/main/bruhcoal.csv", "format":{"type": "csv"}
    },
    "transform": [
      {"filter": "datum.Year == yearSelector"},
      {
        "lookup": "Country",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/johan/world.geo.json/master/countries.geo.json",
            "format": {"property": "features"}
          },
          "key": "properties.name",
          "fields": ["properties", "type", "geometry", "id"]
        }
      }
    ],
    "projection": {"type": "naturalEarth1"},
    "mark": {"type": "geoshape",
    "stroke": "black", "strokeWidth": 0.2},
    
    "encoding":{
      "color": { 
        "legend": {"title": "Coal Consumption in Millions of Tonnes", "titleFontSize": 9.4, "orient": "bottom"},
        "field": "Coal Consumption", "type": "quantitative", "scale": {"scheme": "goldred"} 
      },
      "tooltip": [{"field": "properties.name", "type": "nominal", "title": "Country"}, {"field": "Coal Consumption", "type": "quantitative"}]
    }
  }